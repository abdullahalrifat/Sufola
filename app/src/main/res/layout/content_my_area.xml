<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a7802">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Agri Area And Weather"

        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.00"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="219dp"
        android:layout_height="212dp"
        android:id="@+id/imageView"
        android:layout_marginTop="18dp"
        android:src="@drawable/weather"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Area:Ishwardi
Weather: Sunny(88 F)
For Suitable Crops =    Aus ,Potato ,Sugarcan etc"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/back"
        android:text="Back"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#fffefc"
        android:layout_marginTop="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="40dp" />

</LinearLayout>
